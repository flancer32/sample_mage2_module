{
  "templates": {
    "bin/mage_clean.sh": {
      "src": "../cfg/bin/mage_clean.sh",
      "dst": "bin/mage_clean.sh",
      "events": [
        "post-install-cmd",
        "post-status-cmd"
      ],
      "condition": {
        "var": "DEPLOYMENT_TYPE",
        "operation": "!=",
        "value": "live"
      },
      "rewrite": true
    },
    "bin/post_install.sh": {
      "src": "../cfg/bin/post_install.live.sh",
      "dst": "bin/post_install.sh",
      "events": [
        "post-install-cmd",
        "post-status-cmd"
      ],
      "rewrite": true
    }
  }
}