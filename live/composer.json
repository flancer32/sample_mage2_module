{
  "name": "flancer32/sample_mage2_module_live",
  "description": "Production environment for Magento 2 sample module.",
  "type": "project",
  "homepage": "https://github.com/flancer32/sample_mage2_module",
  "license": "MIT",
  "authors": [
    {
      "name": "Alex Gusev",
      "email": "flancer64@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.5",
    "symfony/event-dispatcher": "~2.1",
    "magento/magento-composer-installer": "dev-patch-1",
    "praxigento/composer_plugin_templates": "^1.0",
    "magento/product-community-edition": "1.0.0-beta",
    "flancer32/sample_mage2_module": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Magento\\Framework\\": "htdocs/lib/internal/Magento/Framework/",
      "Magento\\Setup\\": "htdocs/setup/src/Magento/Setup/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": {
    "firegento": {
      "type": "composer",
      "url": "http://packages.firegento.com"
    },
    "magento": {
      "type": "composer",
      "url": "http://packages.magento.com/"
    },
    "flancer64/magento-composer-installer": {
      "type": "vcs",
      "url": "https://github.com/flancer64/magento-composer-installer"
    },
    "flancer32/sample_magelib_demo": {
      "type": "vcs",
      "url": "https://github.com/flancer32/sample_magelib_demo"
    },
    "flancer32/sample_mage2_module": {
      "type": "vcs",
      "url": "https://github.com/flancer32/sample_mage2_module"
    }
  },
  "config": {
    "use-include-path": true
  },
  "scripts": {
    "pre-install-cmd": [
      "# Create root directory for the development Magento instance.",
      "mkdir -p htdocs"
    ],
    "post-install-cmd": [
      "# To complete installation launch 'sh ./bin/deploy/post_install.sh'"
    ]
  },
  "extra": {
    "magento-root-dir": "htdocs",
    "magento-deploystrategy": "copy",
    "magento-force": true,
    "auto-append-gitignore": false,
    "praxigento_templates_config": [
      "./templates.json",
      "./cfg/templates.json"
    ]
  }
}