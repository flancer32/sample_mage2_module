{
  "name": "flancer32/sample_mage2_module_work",
  "description": "Development/test environment for Magento 2 sample module.",
  "type": "project",
  "homepage": "https://github.com/flancer32/sample_mage2_module",
  "license": "MIT",
  "authors": [
    {
      "name": "Alex Gusev",
      "email": "flancer64@gmail.com"
    }
  ],
  "require": {
    "php": "~5.5.0|~5.6.0|~7.0.0",
    "praxigento/composer_plugin_templates": "^1.0",
    "magento/magento-composer-installer": "^0.1",
    "magento/product-community-edition": "2.0.0",
    "flancer32/sample_mage2_module": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "4.1.0"
  },
  "autoload": {
    "psr-4": {
      "Magento\\Setup\\": "setup/src/Magento/Setup/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Flancer32\\Sample\\Test\\": "test/fw/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": {
    "firegento": {
      "type": "composer",
      "url": "http://packages.firegento.com"
    },
    "magento": {
      "type": "composer",
      "url": "http://packages.magento.com/"
    },
    "flancer32/sample_magelib_demo": {
      "type": "vcs",
      "url": "https://github.com/flancer32/sample_magelib_demo"
    },
    "flancer32/sample_mage2_module": {
      "type": "vcs",
      "url": "https://github.com/flancer32/sample_mage2_module"
    }
  },
  "config": {
    "use-include-path": true
  },
  "scripts": {
    "post-install-cmd": [
      "# To complete installation launch 'sh ./bin/post_install.sh'",
      "# To clean up Magento files launch 'sh ./bin/mage_clean.sh'"
    ]
  },
  "extra": {
    "magento-root-dir": ".",
    "magento-deploystrategy": "copy",
    "magento-force": true,
    "auto-append-gitignore": false,
    "praxigento_templates_config": [
      "./templates.cfg.json",
      "../templates.vars.work.json"
    ]
  }
}